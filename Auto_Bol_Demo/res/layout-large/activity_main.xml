<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/gradient">

    <LinearLayout
        android:id="@+id/headerLayOutID"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/titulo_bolivia"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titulo_cedula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/titulo_cedula"
            android:textColor="#FF8000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#FF8000" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#848484" />
    </LinearLayout>

    <TextView
        android:id="@+id/bienvenida_msg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:text="@string/bienvenida"
        android:textColor="#848484"
        android:textSize="30sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/datosNFClLayOutID"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/vencimientoLayOutID"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/estado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:text="@string/status_ok"
                android:textColor="#848484"
                android:textSize="33sp" />

            <ImageView
                android:id="@+id/estado_img"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:contentDescription="@string/status_ok"
                android:src="@drawable/ok" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/matriculaLayOutID"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/matricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/matriculaFake"
                android:textSize="33sp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#848484" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/datosLayOutID"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/datos_contenedor"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <LinearLayout
                    android:id="@+id/labelDatosLayOutID"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/label_cedula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/matricula"
                        android:layout_marginTop="8dp"
                        android:text="@string/label_numeroCedula"
                        android:textColor="#848484"
                        android:textSize="33sp" />

                    <TextView
                        android:id="@+id/label_serie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/label_serie"
                        android:textColor="#848484"
                        android:textSize="33sp" />

                    <TextView
                        android:id="@+id/label_seccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/label_seccion"
                        android:textColor="#848484"
                        android:textSize="33sp" />

                    <TextView
                        android:id="@+id/label_lugar_emision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/label_lugar_emision"
                        android:textColor="#848484"
                        android:textSize="33sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/txtDatosLayOutID"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cedula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/cedulaFake"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/serie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/serieFake"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/seccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/seccionFake"
                        android:textSize="33sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/emisionLayOutID"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/lugar_emision"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/lugarEmisonFake"
                    android:textSize="33sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/img_depto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/label_lugar_emision"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#848484"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <LinearLayout
            android:id="@+id/fechasLayOutID"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <LinearLayout
                android:id="@+id/lblFechasLayOutID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/label_fecha_emision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lugar_emision"
                    android:text="@string/label_fecha_emision"
                    android:textColor="#848484"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/label_fecha_vencimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_fecha_vencimiento"
                    android:textColor="#848484"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/txtFechasLayOutID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/fecha_emision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/fechaEmisionFake"
                    android:textSize="30sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/fecha_vencimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/fechaVigenciaFake"
                    android:textSize="30sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>        
    </LinearLayout>
    
    <LinearLayout
            android:id="@+id/bannerLayOutID"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#848484" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_marginTop="1dp"
                android:background="#FF8000" />

            <ImageView
                android:id="@+id/img_escudo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/neology_tb2" />
        </LinearLayout>

</LinearLayout>